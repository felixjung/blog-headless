{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules/jest-extended/types",
    "node_modules",
    "lint-staged.config.js",
    "src/api/**/*.spec.ts",
  ]
}
